{
	"name": "bruce-cli",
	"version": "0.1.1",
	"description": "a react application automation build scaffold",
	"keywords": [
		"bruce-cli",
		"react-cli",
		"vue-cli",
		"create-react-app",
		"@vue/cli",
		"bruce",
		"cli",
		"default",
		"react",
		"vue",
		"webpack",
		"handlebars",
		"postcss",
		"sass",
		"less",
		"babel",
		"typescript",
		"stylelint",
		"eslint",
		"tslint",
		"build",
		"init",
		"locale",
		"new",
		"remove",
		"spa",
		"mpa",
		"package",
		"module",
		"chunk",
		"bundle"
	],
	"author": {
		"name": "Joway Young",
		"phone": "18819249731",
		"email": "young.joway@aliyun.com"
	},
	"homepage": "https://github.com/JowayYoung",
	"repository": {
		"type": "git",
		"url": "https://github.com/JowayYoung/bruce-cli.git"
	},
	"license": "MIT",
	"bin": {
		"bruce": "bin/bruce.js"
	},
	"scripts": {
		"check": "eslint . --ext .js",
		"compile": "node build/compile.js",
		"convert": "node build/convert.js",
		"remove": "rimraf package-lock.json && rimraf yarn.lock && rimraf node_modules",
		"start": "npm run compile"
	},
	"dependencies": {
		"@babel/cli": "7.4.4",
		"@babel/core": "7.4.5",
		"@babel/plugin-proposal-class-properties": "7.4.4",
		"@babel/plugin-proposal-decorators": "7.4.4",
		"@babel/plugin-syntax-dynamic-import": "7.2.0",
		"@babel/plugin-transform-runtime": "7.4.4",
		"@babel/preset-env": "7.4.5",
		"@babel/preset-react": "7.0.0",
		"@babel/preset-typescript": "7.3.3",
		"babel-eslint": "10.0.1",
		"babel-loader": "8.0.6",
		"babel-plugin-import": "1.12.0",
		"babel-plugin-lodash": "3.3.4",
		"chalk": "2.4.2",
		"clean-webpack-plugin": "2.0.2",
		"commander": "2.20.0",
		"compression-webpack-plugin": "3.0.0",
		"core-js": "3.1.3",
		"css-loader": "3.0.0",
		"dayjs": "1.8.14",
		"easy-table": "1.1.1",
		"eslint": "5.16.0",
		"eslint-config-standard": "12.0.0",
		"eslint-friendly-formatter": "4.0.1",
		"eslint-loader": "2.1.2",
		"eslint-plugin-html": "5.0.5",
		"eslint-plugin-import": "2.17.3",
		"eslint-plugin-node": "9.1.0",
		"eslint-plugin-promise": "4.1.1",
		"eslint-plugin-react": "7.13.0",
		"eslint-plugin-standard": "4.0.0",
		"figures": "3.0.0",
		"file-loader": "4.0.0",
		"fork-ts-checker-webpack-plugin": "1.3.7",
		"friendly-errors-webpack-plugin": "1.7.0",
		"handlebars-loader": "1.7.1",
		"html-webpack-plugin": "3.2.0",
		"html-webpack-tags-plugin": "2.0.12",
		"image-webpack-loader": "5.0.0",
		"inquirer": "6.3.1",
		"latest-version": "5.1.0",
		"less": "3.9.0",
		"less-loader": "5.0.0",
		"lodash-webpack-plugin": "0.11.5",
		"make-dir": "3.0.0",
		"mini-css-extract-plugin": "0.7.0",
		"node-sass": "4.12.0",
		"open": "6.3.0",
		"optimize-css-assets-webpack-plugin": "5.0.1",
		"ora": "3.4.0",
		"portscanner": "2.2.0",
		"postcss-import": "12.0.1",
		"postcss-loader": "3.0.0",
		"postcss-preset-env": "6.6.0",
		"raw-loader": "3.0.0",
		"recursive-copy": "2.0.10",
		"rimraf": "2.6.3",
		"sass-loader": "7.1.0",
		"scp2": "0.5.0",
		"semver": "6.1.1",
		"style-loader": "0.23.1",
		"stylelint": "10.1.0",
		"stylelint-config-standard": "18.3.0",
		"stylelint-webpack-plugin": "0.10.5",
		"terser": "4.0.0",
		"terser-webpack-plugin": "1.3.0",
		"tslint": "5.17.0",
		"tslint-config-standard": "8.0.1",
		"tslint-react": "4.0.0",
		"typescript": "3.5.2",
		"uglifyjs-webpack-plugin": "2.1.3",
		"url-loader": "2.0.0",
		"webpack": "4.34.0",
		"webpack-build-notifier": "1.0.3",
		"webpack-bundle-analyzer": "3.3.2",
		"webpack-cli": "3.3.4",
		"webpack-dev-server": "3.7.1",
		"webpack-merge": "4.2.1",
		"webpack-spritesmith": "1.0.1",
		"webpackbar": "3.2.0"
	},
	"engines": {
		"node": ">= 8.0.0",
		"npm": ">= 5.0.0"
	},
	"browserslist": [
		"last 20 Chrome versions",
		"last 20 Firefox versions",
		"last 20 Opera versions",
		"Explorer >= 11",
		"Safari >= 8",
		"Android >= 4.4",
		"iOS >= 8"
	],
	"babel": {
		"comments": false,
		"presets": [
			[
				"@babel/preset-env",
				{
					"targets": {
						"node": "8.0.0"
					}
				}
			]
		]
	},
	"stylelint": {
		"extends": "stylelint-config-standard",
		"rules": {
			"at-rule-empty-line-before": "never",
			"at-rule-no-unknown": [
				true,
				{
					"ignoreAtRules": [
						"content",
						"error",
						"extend",
						"if",
						"include",
						"mixin"
					]
				}
			],
			"color-hex-case": "lower",
			"comment-empty-line-before": "never",
			"declaration-empty-line-before": "never",
			"indentation": "tab",
			"no-descending-specificity": null,
			"no-missing-end-of-source-newline": null,
			"number-leading-zero": "never",
			"rule-empty-line-before": "never"
		}
	},
	"eslintConfig": {
		"env": {
			"browser": true,
			"commonjs": true,
			"es6": true,
			"node": true
		},
		"extends": [
			"standard",
			"plugin:react/recommended"
		],
		"parser": "babel-eslint",
		"parserOptions": {
			"ecmaFeatures": {
				"jsx": true
			},
			"ecmaVersion": 10,
			"sourceType": "module"
		},
		"plugins": [
			"html",
			"react"
		],
		"root": true,
		"rules": {
			"eol-last": [
				"error",
				"never"
			],
			"handle-callback-err": [
				"error",
				"error"
			],
			"indent": [
				"error",
				"tab"
			],
			"jsx-quotes": [
				"error",
				"prefer-double"
			],
			"no-console": [
				"off"
			],
			"no-new": [
				"off"
			],
			"no-tabs": [
				"off"
			],
			"no-unreachable": [
				"off"
			],
			"object-curly-spacing": [
				"error",
				"always"
			],
			"operator-linebreak": [
				"error",
				"before"
			],
			"quotes": [
				"error",
				"double"
			],
			"semi": [
				"error",
				"always"
			],
			"sort-keys": [
				"error",
				"asc",
				{
					"caseSensitive": false,
					"natural": true
				}
			],
			"space-before-function-paren": [
				"error",
				"never"
			]
		},
		"settings": {
			"react": {
				"version": "16"
			}
		}
	}
}